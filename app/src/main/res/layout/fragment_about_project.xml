<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/background_main_blue_gradient"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_fish_1"

        android:padding="64dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/about_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:text="About project"
        android:textColor="@color/white"

        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="The interactive map of the location of wintering pits includes a list of wintering pits in fishing grounds with an indication of their geographical coordinates.
In the new edition of the Rules of Amateur fishing (Decree of the President of the Republic of Belarus 'On Fishing and Fisheries' dated July 21, 2021 No. 284), a norm of prohibition on all fishing within the boundaries of wintering pits has been introduced.
Users of the interactive map - tenants of fishing grounds, amateur fishermen will be able to plan the fishing process without violating the current legislation."

        android:textColor="@color/white"
        android:textSize="18sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/about_icon"
        app:layout_constraintTop_toBottomOf="@id/about_label" />

</androidx.constraintlayout.widget.ConstraintLayout>