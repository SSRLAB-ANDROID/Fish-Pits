<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_by_river"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="14dp"

        android:background="@drawable/ripple_tables_item"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_by_river_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginVertical="36dp"
            android:layout_marginStart="24dp"

            android:src="@drawable/ic_by_river_item"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_by_river_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Berezina"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"

            app:layout_constraintBottom_toBottomOf="@id/item_by_river_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_by_river_icon"
            app:layout_constraintTop_toTopOf="@id/item_by_river_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>