<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/background_dialog"

    android:layout_marginHorizontal="16dp">

    <LinearLayout
        android:id="@+id/lang_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="@drawable/ripple_dialog"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/english_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/english"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="24dp" />

    </LinearLayout>

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@color/white"

        android:layout_marginHorizontal="48dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_button_1"/>

    <LinearLayout
        android:id="@+id/lang_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="@drawable/ripple_dialog"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_1">

        <TextView
            android:id="@+id/belarusian_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/belarusian"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="32dp" />

    </LinearLayout>

    <View
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@color/white"

        android:layout_marginHorizontal="48dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_button_2"/>

    <LinearLayout
        android:id="@+id/lang_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="@drawable/ripple_dialog"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_2">

        <TextView
            android:id="@+id/russian_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/russian"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:layout_gravity="center"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>